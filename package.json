{
    "name": "@kaiyuanshe/openhackathon-service",
    "version": "0.21.1",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "RESTful API service scaffold based on Node.js & TypeScript",
    "source": "source/index.ts",
    "main": "dist/index.js",
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@koa/cors": "^5.0.0",
        "@koa/multer": "^4.0.0",
        "@koa/router": "^13.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "core-js": "^3.42.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.16.1",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^4.0.4",
        "koa-logger": "^3.2.1",
        "koa-mount": "^4.2.0",
        "koa2-swagger-ui": "^5.11.0",
        "koagger": "^0.4.0",
        "marked": "^15.0.12",
        "mobx-github": "^0.3.11",
        "mobx-restful": "^2.1.0",
        "pg": "^8.16.0",
        "pg-connection-string": "^2.9.0",
        "reflect-metadata": "^0.2.2",
        "routing-controllers": "^0.11.2",
        "routing-controllers-openapi": "^5.0.0",
        "tslib": "^2.8.1",
        "typeorm": "npm:@helveg/typeorm@^0.3.21",
        "undici": "^7.10.0",
        "web-utility": "^4.4.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/koa": "^2.15.0",
        "@types/koa-logger": "^3.1.5",
        "@types/node": "^22.15.29",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "get-git-folder": "^0.1.2",
        "globals": "^16.2.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jiti": "^2.4.2",
        "koajax": "^3.1.2",
        "lint-staged": "^16.1.0",
        "prettier": "^3.5.3",
        "sqlite3": "^5.1.7",
        "start-server-and-test": "^2.0.12",
        "swagger-typescript-api": "^13.1.3",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.33.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "core-js",
            "sqlite3"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write",
        "*.ts": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "prepare": "husky || true",
        "install": "get-git-folder https://github.com/kaiyuanshe/service-configuration main OpenHackathon-Web  ||  true",
        "dev": "cross-env TS_NODE_TRANSPILE_ONLY=true  node -r ts-node/register --watch source/",
        "lint": "lint-staged",
        "build-test": "swagger-typescript-api generate -p http://localhost:8080/docs/spec -o test/ -n client.ts",
        "start-test": "rm -rf .data/  &&  node dist/",
        "jest": "jest",
        "debug": "server-test start-test 8080 jest",
        "test": "npm run build  &&  server-test start-test 8080 build-test  &&  npm run debug",
        "build": "rm -rf dist/ type/*.d.ts  &&  tsc  &&  mv dist/model/*.d.ts type/",
        "start": "cross-env NODE_ENV=production  node dist/",
        "typeorm": "typeorm-ts-node-commonjs -d source/model/index.ts",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "upgrade:dev": "npm run migration:generate -- migration/version  &&  npm run migration:run",
        "upgrade:pro": "cross-env NODE_ENV=production  npm run migration:generate -- .data/version  &&  npm run migration:run",
        "pack-image": "docker build -t kaiyuanshe/openhackathon-service:latest .",
        "container": "docker rm -f openhackathon-service  &&  docker run --name openhackathon-service -p 8080:8080 -d kaiyuanshe/openhackathon-service:latest"
    }
}
