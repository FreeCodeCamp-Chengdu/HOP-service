{
    "name": "@freecodecamp-chengdu/hop-service",
    "version": "1.0.0-rc.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "RESTful API service scaffold based on Node.js & TypeScript",
    "source": "source/index.ts",
    "main": "dist/index.js",
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.927.0",
        "@aws-sdk/s3-request-presigner": "^3.927.0",
        "@koa/cors": "^5.0.0",
        "@koa/multer": "^4.0.0",
        "@koa/router": "^14.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "core-js": "^3.46.0",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "jsonwebtoken": "^9.0.2",
        "koa": "^3.1.1",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^4.0.4",
        "koa-logger": "^4.0.0",
        "koa-mount": "^4.2.0",
        "koa2-swagger-ui": "^5.12.0",
        "koagger": "^0.4.0",
        "marked": "^17.0.0",
        "mobx-github": "^0.6.2",
        "mobx-restful": "^2.1.4",
        "pg": "^8.16.3",
        "pg-connection-string": "^2.9.1",
        "reflect-metadata": "^0.2.2",
        "routing-controllers": "^0.11.3",
        "routing-controllers-openapi": "^5.0.0",
        "tslib": "^2.8.1",
        "typeorm": "^0.3.27",
        "undici": "^7.16.0",
        "web-utility": "^4.6.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/koa": "^3.0.1",
        "@types/koa-logger": "^3.1.5",
        "@types/node": "^22.19.0",
        "better-sqlite3": "^12.4.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "git-utility": "^0.2.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jiti": "^2.6.1",
        "koajax": "^3.1.2",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "start-server-and-test": "^2.1.2",
        "swagger-typescript-api": "^13.2.16",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.3"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "better-sqlite3",
            "core-js"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4,
        "printWidth": 100
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write",
        "*.ts": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "prepare": "husky || true",
        "install": "xgit download https://github.com/freeCodeCamp-Chengdu/key-vault main HOP  ||  true",
        "dev": "cross-env TS_NODE_TRANSPILE_ONLY=true  node -r ts-node/register --watch source/",
        "lint": "lint-staged",
        "build-test": "swagger-typescript-api generate -p http://localhost:8080/docs/spec -o test/ -n client.ts",
        "start-test": "rm -rf .data/  &&  node dist/",
        "jest": "jest",
        "debug": "server-test start-test 8080 jest",
        "test": "npm run build  &&  server-test start-test 8080 build-test  &&  npm run debug",
        "build": "rm -rf dist/ type/*.d.ts  &&  tsc  &&  mv dist/model/*.d.ts type/",
        "start": "cross-env NODE_ENV=production  node dist/",
        "typeorm": "typeorm-ts-node-commonjs -d source/model/index.ts",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "upgrade:dev": "npm run migration:generate -- migration/version  &&  npm run migration:run",
        "upgrade:pro": "cross-env NODE_ENV=production  npm run migration:generate -- .data/version  &&  npm run migration:run",
        "pack-image": "docker build -t freecodecamp-chengdu/hop-service:latest .",
        "container": "docker rm -f hop-service  &&  docker run --name hop-service -p 8080:8080 -d freecodecamp-chengdu/hop-service:latest"
    }
}
